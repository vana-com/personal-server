{
  "compilerOptions": {
    "strict": true,
    "target": "ES2022",
    "module": "Node16",
    "moduleResolution": "Node16",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "composite": true
  },
  "references": [
    { "path": "packages/core" },
    { "path": "packages/server" },
    { "path": "packages/cli" }
  ],
  "exclude": ["node_modules", "dist", "*.config.ts"]
}
